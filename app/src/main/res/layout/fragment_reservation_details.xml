<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image -->
        <ImageView
            android:id="@+id/img_detail_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_noimg" />

        <EditText
            android:id="@+id/editTextStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/select_start_date"
            android:inputType="none"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/select_end_date"
            android:inputType="none"
            android:minHeight="48dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            android:textColor="#2E86DE" />

        <!-- Type -->
        <TextView
            android:id="@+id/tv_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_marginTop="8dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price" />

        <!-- Location -->
        <TextView
            android:id="@+id/tv_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location" />

        <!-- Area -->
        <TextView
            android:id="@+id/tv_detail_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area" />

        <!-- Bedrooms -->
        <TextView
            android:id="@+id/tv_detail_bedrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bedrooms" />

        <!-- Bathrooms -->
        <TextView
            android:id="@+id/tv_detail_bathrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bathrooms" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_back_to_properties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Button
                android:id="@+id/btn_confirm_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>